    "basePath": "/",
    "paths": {
        "/api/web/article": {
            "get": {
                "description": "按 分页或分类或标签或关键词 获取文章列表数据",
                "tags": [
                    "Web"
                ],
                "summary": "文章列表",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "分类ID",
                        "name": "category_id",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "关键词",
                        "name": "keywords",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 1,
                        "description": "分页编号",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 5,
                        "description": "分页数量",
                        "name": "size",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "标签ID",
                        "name": "tag_id",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "$ref": "#/definitions/schema.ArticleListResp"
                        }
                    }
                }
            }
        },
        "/api/web/article/{id}": {
            "get": {
                "description": "根据文章序号获取文章详细数据",
                "tags": [
                    "Web"
                ],
                "summary": "查看文章",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "文章ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "$ref": "#/definitions/entity.Article"
                        }
                    }
                }
            }
        },
        "/api/web/category/{id}": {
            "get": {
                "description": "根据分类序号获取文章分类的详细数据",
                "tags": [
                    "Web"
                ],
                "summary": "查看分类",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "分类ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "$ref": "#/definitions/entity.ArticleCategory"
                        }
                    }
                }
            }
        },
        "/api/web/home": {
            "get": {
                "description": "一次性获取首页所需所有数据",
                "tags": [
                    "Web"
                ],
                "summary": "首页数据",
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "$ref": "#/definitions/schema.HomeDataResp"
                        }
                    }
                }
            }
        },
        "/api/web/state": {
            "get": {
                "description": "获取初始数据,如标题/统计/LOGO等",
                "tags": [
                    "Web"
                ],
                "summary": "全局初始数据",
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "$ref": "#/definitions/schema.StateDataResp"
                        }
                    }
                }
            }
        },
        "/api/web/statistic/{id}/{type}": {
            "put": {
                "description": "更新文章统计数据,如查看量",
                "tags": [
                    "Web"
                ],
                "summary": "文章统计",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "文章ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "统计类型:views,favourites",
                        "name": "type",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "$ref": "#/definitions/schema.ErrorResp"
                        }
                    }
                }
            }
        },
        "/api/web/tag/{id}": {
            "get": {
                "description": "根据标签序号获取标签详细数据",
                "tags": [
                    "Web"
                ],
                "summary": "查看标签",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "标签ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "$ref": "#/definitions/entity.ArticleTag"
                        }
                    }
                }
            }
        }
    },
